{
  "name": "payroll-calculator",
  "version": "1.0.0",
  "description": "A basic app where the user can fill in information about their profession and employment in a form and then see what their salary will be after taxes.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild ./src/App.tsx --bundle --outfile=./bin/app.js",
    "dev": "esbuild ./src/App.tsx --bundle --outfile=./bin/app.js --servedir=./bin  --sourcemap",
    "cypress-open": "node_modules\\.bin\\cypress open",
    "cypress-run": "node_modules\\.bin\\cypress run",
    "cypress-run-nonwindows": "node_modules/.bin/cypress run",
    "ci-test": "start-server-and-test dev http-get://localhost:8000 cypress-run",
    "test": "jest ./src"
  },
  "keywords": [
    "React",
    "Typescript",
    "Cypress"
  ],
  "author": "Olof Lindell",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "cypress": "^9.5.2",
    "esbuild": "^0.14.27",
    "start-server-and-test": "^1.14.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
